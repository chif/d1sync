{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "dev",
      "problemMatcher": ["$eslint-compact"]
    },
    {
      "type": "npm",
      "script": "lint-fix",
      "problemMatcher": ["$eslint-compact"]
    },
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": ["$eslint-compact"]
    },
    {
      "type": "npm",
      "script": "electron-rebuild",
      "problemMatcher": ["$eslint-compact"],
      "group": "build"
    },
    {
      "type": "npm",
      "script": "electron-rebuild",
      "path": "app/",
      "problemMatcher": ["$eslint-compact"],
      "group": "build"
    }
  ]
}
